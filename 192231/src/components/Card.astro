---
export interface CardProps {
  title: string; 
  image: string; 
  buttonText: string; 
}
const { title, image, buttonText } = Astro.props;
---
<div class="bg-white rounded-lg shadow-lg overflow-hidden  transition-transform hover:scale-110">
  <img src={image} alt={title} class="w-[350px] h-48 object-cover " />
  <div class="p-4">
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <button class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">{buttonText}</button>
  </div>
</div>